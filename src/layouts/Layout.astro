---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Contact from '../components/ContactSection.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Well let me check my list of powers and weaknesses: ability to do anything, but only whenever I want.">
		<title>{title}</title>


		<script 
			src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.3/gsap.min.js"
			integrity="sha512-gmwBmiTVER57N3jYS3LinA9eb8aHrJua5iQD7yqYCKa5x6Jjc7VDVaEA0je0Lu0bP9j7tEjV3+1qUm6loO99Kw=="
			crossorigin="anonymous"
			referrerpolicy="no-referrer">
		</script>

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;900&family=Space+Grotesk:wght@400;600&family=Work+Sans:wght@400;500;600&display=swap" rel="stylesheet">
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Contact />
		<Footer />
	</body>
</html>
<style>
	:root {
		--font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
		--font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);
		--font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);

		--color-text: hsl(12, 5%, 4%);
		--color-bg: hsl(10, 21%, 95%);
		--color-border: hsl(17, 24%, 90%);

		--color-primary: #0000ff;
		--color-secondary: #00ffff;
		--astro-gradient: linear-gradient(0deg, var(--color-primary), var(--color-secondary));		
	}

	html {
		font-family: 'Space Grotesk', sans-serif;
		font-size: var(--font-size-base);
		color: var(--color-text);
		background-color: var(--color-bg);
	}

	body {
		margin: 0;
	}


</style>

<style is:global>
	html {
		scroll-behavior: smooth;
	}
	h1,
	.h1-like {
		font-size: var(--font-size-xl);
	}

	h2,
	.h2-like {
		font-size: var(--font-size-lg);
	}

	a {
		color: inherit;
	}

	a:hover {
		color: var(--color-primary);
		text-decoration: none;
	}

	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}

	.container {
		width: min(100% - 24px, 1024px);
    	margin-inline: auto;
	}

	section {
		padding: 40px 0 40px 0;
	}

	.text-gradient {
		background-image: var(--astro-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 100% 200%;
		background-position-y: 100%;
		border-radius: 0.4rem;
		animation: pulse 0.2s ease-in-out infinite;
	}

	@keyframes pulse {
		0%,
		100% {
			background-position-y: 0%;
		}
		50% {
			background-position-y: 100%;
		}
	}
</style>
