---
const response = await fetch('https://rickandmortyapi.com/api/character');
const data = await response.json();

const item = data.results[0];
---



<div class="ram-grid">
    {data.results.map( el => {
        return <li  class="ram-grid-item">
                    <h4>{el.name}</h4>
                    <img src={el.image}/>
                </li>    
    })}
</div>


<style>
    .ram-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 12px;
    }

    .ram-grid-item {
        position: relative;
        list-style: none;

    }

    .ram-grid h4 {
        box-sizing: border-box;
        width: 100%;
        position: absolute;
        bottom: 0;
        text-align: center;
        padding: 8px;
        margin: auto;
        background-color: hsla(0, 0%, 100%, 0.40);
        backdrop-filter: blur(4px);
    }
    .ram-grid img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

</style>